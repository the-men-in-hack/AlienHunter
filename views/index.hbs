

<div id="map"></div>

<script src="https://maps.googleapis.com/maps/api/js?key={{maps_api_key}}"></script>
<script type="text/javascript" src="../js/maps.js"></script>

<div class="container ">
  <div class="row">
    <div class="col-sm">    
    </div>
    <div class="col-sm">
      <a class= "headerBtn addAbductionBtn" href="/abduction/create">ADD ABDUCTION</a>
    </div>
    <div class="col-sm">
    </div>
  </div>
</div>

{{#each abductions}}
<div class="container cont-abd">
  <div class="row align-items-center row-abd">
    <div class="col">
        <div class="block">
            <img src="{{this.pictures}}" alt="Picture of abduction" width="200" height="250">
        </div>
    </div>
    <div class="col">
      <container class="posts-list"> 
     <div id="abductionForm">
        <div class="block">
            <label>Location (longitude/latitude):</label><br>{{this.location.coordinates.[0]}}/{{this.location.coordinates.[1]}}
        </div> 
        <br>
        <div class="block">
            <label>Location Name: </label><br>{{this.locationName}}
        </div> 
        <br>
        <div class="block">
            <label>Time/Date: </label><br>{{this.timeDate}}
        </div>
        <br>
        <div class="block">
          <a class="user-link" href="/user/{{this.reporter._id}}/profile">
            <label>Reporter: </label><br>{{this.reporter.username}}
            </a>
        </div>
        <div class="col">
                <div class="block details-btn"></div>
                <a class="btn btn-primary" href="/abduction/{{this._id}}">Details</a>                <a class="btn btn-primary find-on-map" onclick="topFunction()" data-longitude="42"href="javascript:newMarker( { lng: {{this.location.coordinates.[0]}}, lat: {{this.location.coordinates.[1]}} })">show on map</a>
            </div>
        </div>
    </div>
    </container>
    </div>
    <div class="col">
    </div>
  </div>
</div>
{{/each}}

